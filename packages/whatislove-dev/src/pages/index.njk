---
layout: page.njk
permalink: 'index.html'
---

{% from 'social-list.njk' import socialList %}
{% from 'live-logo.njk' import liveLogo %}
{% from 'settings.njk' import settings %}
{% set MAIN_IMAGE_FORMATS = ['avif', 'webp'] %}

<h1 class="visually-hidden">Vladyslav Zubko - interface developer</h1>
<header class="header starry-sky">
	<span class="header__live-logo-wrapper">{{ liveLogo('header__live-logo') }}</span>
	<div class="header__navigation-wrapper">
		<button class="header__toggle-button" type="button" aria-expanded="false" aria-controls="navigation-menu">
			<span class="visually-hidden">Toggle navigation menu</span>
			<span class="header__toggle-object"></span>
		</button>
		<nav class="header__navigation navigation">
			<ul class="navigation__list" id="navigation-menu">
				<li class="navigation__item">
					<a href="#intro">About</a>
				</li>
				<li class="navigation__item">
					<a href="#timeline">Experience</a>
				</li>
				<li class="navigation__item">
					<a href="#favorites">Favorites</a>
				</li>
			</ul>
		</nav>
	</div>
	<p class="header__name">Vladyslav Zubko</p>
	<p class="header__name-intro">Interface developer</p>
	{{ settings('header__settings') }}
</header>
<main>
	<section class="intro" id="intro">
		<div class="intro__wrapper">
			<header class="intro__header section-header">
				<h2 class="section-header__title">About</h2>
				<p class="section-header__desc">Let's get acquainted closer</p>
			</header>
			<div class="intro__content">
				<p class="intro__image-wrapper">
					<picture>
						{% for format in MAIN_IMAGE_FORMATS %}
							<source srcset="/images/whatislove-zubko.photo.{{ format }} 1x, /images/whatislove-zubko@2x.photo.{{ format }} 2x" type="image/{{ format }}" />
						{% endfor %}
						<img src="/images/whatislove-zubko.photo.png" srcset="/images/whatislove-zubko@2x.photo.png 2x" loading="lazy" width="202" height="303" alt="Vladyslav Zubko" />
					</picture>
				</p>
				<div class="intro__personal-wrapper">
					<h3 class="intro__personal-title">Personal information</h3>
					<dl class="intro__list">
						<div class="intro__item intro__item--name">
							<dt class="intro__item-title">Full name</dt>
							<dd class="intro__item-desc">Vladyslav Zubko</dd>
						</div>
						<div class="intro__item intro__item--email">
							<dt class="intro__item-title">Email</dt>
							<dd class="intro__item-desc">
								<a href="mailto:hello@whatislove.dev">hello@whatislove.dev</a>
							</dd>
						</div>
						<div class="intro__item intro__item--socials">
							<dt class="intro__item-title">Socials</dt>
							<dd class="intro__item-desc">{{ socialList('intro__social-list') }}</dd>
						</div>
					</dl>
					<h3 class="intro__myself-title">A little bit about myself</h3>
					<p class="intro__myself-desc">
						With semantics, a11y and love
						<span aria-hidden="true">&lt;3</span>
					</p>
				</div>
			</div>
		</div>
	</section>
	<section class="timeline" id="timeline">
		<header class="timeline__header section-header">
			<h2 class="section-header__title">Experience</h2>
			<p class="section-header__desc">My path</p>
		</header>
		<form class="timeline__filter exp-filter" action="/timeline">
			<div class="exp-filter__wrapper">
				<fieldset class="exp-filter__skills-type" name="skillTypes">
					<legend class="exp-filter__skill-title">Skills type:</legend>
					<ul class="exp-filter__list">
						<li class="exp-filter__item">
							<label class="exp-filter__label form-control">
								<input class="form-control__input form-control__input--checkbox" name="hardSkill" type="checkbox" checked />
								Hard Skills
							</label>
						</li>
						<li class="exp-filter__item">
							<label class="exp-filter__label form-control">
								<input class="form-control__input form-control__input--checkbox" name="softSkill" type="checkbox" />
								Soft Skills
							</label>
						</li>
					</ul>
				</fieldset>
				<fieldset class="exp-filter__skill-types" name="types">
					<legend class="exp-filter__skill-title">Experience type:</legend>
					<ul class="exp-filter__list">
						<li class="exp-filter__item">
							<label class="exp-filter__label form-control">
								<input class="form-control__input form-control__input--checkbox" name="position" type="checkbox" checked />
								Positions
							</label>
						</li>
						<li class="exp-filter__item">
							<label class="exp-filter__label form-control">
								<input class="form-control__input form-control__input--checkbox" name="course" type="checkbox" />
								Courses
							</label>
						</li>
						<li class="exp-filter__item">
							<label class="exp-filter__label form-control">
								<input class="form-control__input form-control__input--checkbox" name="meetup" type="checkbox" />
								Meetups
							</label>
						</li>
						<li class="exp-filter__item">
							<label class="exp-filter__label form-control">
								<input class="form-control__input form-control__input--checkbox" name="book" type="checkbox" />
								Books
							</label>
						</li>
					</ul>
				</fieldset>
			</div>
		</form>
		<div class="timeline__list-wrapper">
			<ul class="timeline__list"></ul>
			<p class="timeline__desc-empty">Nothing here yet. Try to select more options in the filter.</p>
		</div>
		<a class="timeline__resume-link" href="/files/vladyslav-zubko-cv.pdf" target="_blank" rel="noreferrer noopener">
			<span class="timeline__resume-icon" aria-hidden="true"></span>
			<span class="timeline__resume-text">View my resume</span>
		</a>
	</section>
	<section class="favorites" id="favorites">
		<header class="favorites__header section-header">
			<h2 class="section-header__title">Favorites</h2>
			<p class="section-header__desc">What I Love</p>
		</header>
		<div class="favorites__wrapper">
			<ul class="favorites__list">
				<li class="favorites__item">
					<p class="favorites__item-text favorites__item-text--html">HTML</p>
				</li>
				<li class="favorites__item">
					<p class="favorites__item-text favorites__item-text--css">CSS</p>
				</li>
				<li class="favorites__item">
					<p class="favorites__item-text favorites__item-text--js">JS</p>
				</li>
			</ul>
		</div>
	</section>
</main>
<footer class="footer">
	{{ socialList('footer__social-list') }}
	<span class="footer__routine-wrapper" aria-hidden="true">
		<span class="footer__routine"></span>
	</span>
</footer>
