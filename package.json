{
	"version": "1.8.0",
	"name": "whatislove.dev",
	"private": true,
	"type": "module",
	"engines": {
		"node": "20.x.x",
		"npm": "10.x.x"
	},
	"scripts": {
		"_prettier": "prettier \"**/*.{json,md,yml,njk,css,js,cjs,d.ts}\"",
		"postinstall": "simple-git-hooks",
		"start": "concurrently -k -p \"{name}: {time}\" -n \"CLIENT,SERVER\" -c \"green,blue\" \"npm:start:client\" \"npm:start:server\"",
		"start:client": "NODE_ENV=development npx @11ty/eleventy --serve --quiet",
		"start:server": "json-server --watch source/database.json --port 3001",
		"build:clean": "rm -rf build",
		"build": "npm run build:clean && npx @11ty/eleventy",
		"ci:lint:commit": "npx @commitlint/cli --edit",
		"ci:lint:fs": "ls-lint",
		"ci:lint:editor": "editorconfig-checker",
		"ci:lint:format": "npm run _prettier -- --check",
		"ci:lint:trash": "knip --config knip.config.js",
		"ci:lint:markup": "w3c-html-validator \"build\"",
		"ci:lint:html": "npx @linthtml/linthtml \"source/**/*.njk\"",
		"ci:lint:bem": "bemlint \"source/**/*.njk\" --errors",
		"ci:lint:css": "stylelint \"source/styles/**/*.css\"",
		"ci:lint:js": "eslint \"**/*.js\"",
		"ci:lint:type": "tsc --noEmit",
		"ci:lint": "concurrently \"npm:ci:lint:*(!commit)\"",
		"ci:format": "npm run _prettier -- --write"
	},
	"dependencies": {
		"form-payload": "0.0.8"
	},
	"devDependencies": {
		"@11ty/eleventy": "3.0.0-alpha.3",
		"@11ty/eleventy-img": "3.1.8",
		"@commitlint/cli": "17.8.1",
		"@commitlint/config-conventional": "18.4.0",
		"@commitlint/types": "18.4.3",
		"@eslint/js": "8.55.0",
		"@linthtml/linthtml": "0.9.5",
		"@ls-lint/ls-lint": "2.2.2",
		"@types/11ty__eleventy-img": "2.0.5",
		"@types/eslint": "8.44.7",
		"@types/eslint__js": "8.42.3",
		"@types/html-minifier-terser": "7.0.2",
		"@types/lint-staged": "13.2.2",
		"@typescript-eslint/eslint-plugin": "6.14.0",
		"@typescript-eslint/parser": "6.14.0",
		"bemlint": "1.7.0",
		"browserslist": "4.22.1",
		"concurrently": "8.2.2",
		"editorconfig-checker": "5.1.1",
		"esbuild": "0.19.5",
		"eslint": "8.53.0",
		"eslint-import-resolver-typescript": "3.6.1",
		"eslint-plugin-import": "2.29.0",
		"eslint-plugin-jsdoc": "47.0.2",
		"eslint-plugin-perfectionist": "2.5.0",
		"eslint-plugin-sonarjs": "0.23.0",
		"eslint-plugin-unicorn": "49.0.0",
		"globals": "13.24.0",
		"html-minifier-terser": "7.2.0",
		"json-server": "0.17.4",
		"knip": "3.9.0",
		"lightningcss": "1.22.1",
		"lint-staged": "15.1.0",
		"linthtml-config-htmlacademy": "1.0.12",
		"prettier": "3.1.0",
		"prettier-plugin-jinja-template": "1.3.1",
		"prettier-plugin-jsdoc": "1.1.1",
		"simple-git-hooks": "2.9.0",
		"stylelint": "16.0.2",
		"stylelint-config-standard": "35.0.0",
		"stylelint-order": "6.0.4",
		"svgo": "3.1.0",
		"typescript": "5.2.2",
		"w3c-html-validator": "1.6.1"
	},
	"browserslist": [
		"last 2 version",
		"not dead"
	],
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged",
		"commit-msg": "npm run ci:lint:commit"
	}
}
