    "gulp-rev-rewrite": "4.0.0",
    "gulp-sourcemaps": "3.0.0",
    "gulp-svgstore": "7.0.1",
    "gulp-webp": "4.0.1",
    "imagemin": "7.0.1",
    "imagemin-jpegtran": "7.0.0",
    "imagemin-pngquant": "9.0.2",
    "imagemin-svgo": "9.0.0",
    "joi": "17.4.0",
    "koa": "2.13.1",
    "koa-bodyparser": "4.3.0",
    "koa-router": "10.0.0",
    "lint-staged": "10.5.4",
    "module-alias": "2.2.2",
    "nanoid": "3.1.22",
    "node-json-db": "1.3.0",
    "node-w3c-validator": "2.0.1",
    "nodemon": "2.0.7",
