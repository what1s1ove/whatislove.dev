{
  "private": true,
  "engines": {
    "node": "14.15.4"
  },
  "scripts": {
    "build": "gulp",
    "start": "concurrently -k -p \"{name}: {time}\" -n \"CLIENT,SERVER\" -c \"green,blue\" \"npm:start:client\" \"npm:start:server\"",
    "start:client": "gulp --development",
    "start:server": "nodemon -r module-alias/register source/js/server/server.js --exec \"babel-node\"",
    "lint": "npm run lint:editorconfig && npm run lint:html && npm run lint:css && npm run lint:js",
    "lint:html": "node-w3c-validator -i build/*.html -f lint -evH",
    "lint:css": "stylelint \"source/css/**/*.css\" --syntax css",
    "lint:js": "eslint --ext .js source/js",
    "lint:editorconfig": "editorconfig-checker"
  },
  "browserslist": [
    "last 2 version",
    "not dead"
  ],
  "simple-pre-commit": "npx lint-staged",
  "_moduleAliases": {
    "~": "source/js"
  },
  "dependencies": {
    "focus-visible": "5.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.13",
    "@babel/node": "7.13.0",
