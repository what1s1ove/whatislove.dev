{
  "private": true,
  "engines": {
    "node": "14.15.4"
  },
  "scripts": {
    "lint:fs": "ls-lint",
    "lint:editorconfig": "editorconfig-checker",
    "lint:html": "node-w3c-validator -i build/*.html -f lint -evH",
    "lint:css": "stylelint source/css/**/*.css --syntax css",
    "lint:js": "eslint --ext .js source/js",
    "lint": "npm run lint:fs && npm run lint:editorconfig && npm run lint:html && npm run lint:css && npm run lint:js",
    "start": "concurrently -k -p \"{name}: {time}\" -n \"CLIENT,SERVER\" -c \"green,blue\" \"npm:start:client\" \"npm:start:server\"",
    "start:client": "gulp --development",
    "start:server": "nodemon --exec babel-node -r module-alias/register source/js/server/server.js",
    "build": "gulp",
    "deploy": "cd build && rsync --archive --compress --delete . whatislove@whatislove.dev:/var/www/whatislove.dev/html/"
  },
  "_moduleAliases": {
    "~": "source/js"
  },
  "dependencies": {
    "focus-visible": "5.2.0",
    "form-payload": "0.0.4"
  },
  "devDependencies": {
    "@babel/core": "7.13.13",
    "@babel/node": "7.13.13",
